  let produkDipilih = '';
  function openModal(produk){
    produkDipilih = produk;
    document.getElementById('produk').innerText = produk;
    document.getElementById('modal').style.display='flex';
  }
  window.onclick = function(e){
    if(e.target.id==='modal'){
      document.getElementById('modal').style.display='none';
    }
  }
  function kirimWA(){
    const nama = document.getElementById('nama').value;
    const server = document.getElementById('server').value;
    const harga = produkDipilih.includes('25') ? 'Rp25.000' : produkDipilih.includes('10') ? 'Rp10.000' : 'Rp5.000';
    const struk = `STRUK PEMESANAN\nProduk: ${produkDipilih}\nNama: ${nama}\nServer: ${server}\nHarga: ${harga}\nStatus: MENUNGGU PEMBAYARAN`;
    navigator.clipboard.writeText(struk);
    const wa = `https://wa.link/drdsxr?text=${encodeURIComponent(struk)}`;
    window.open(wa,'_blank');
  }
</script></body>
